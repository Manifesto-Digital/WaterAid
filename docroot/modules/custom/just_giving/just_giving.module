<?php

/**
 * @file
 * Contains just_giving.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function just_giving_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the just_giving module.
    case 'help.page.just_giving':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides integration with Just Giving through the PHP SDK') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function just_giving_theme(): array {
  return [
    'just_giving' => [
      'render element' => 'children',
    ],
  ];
}
