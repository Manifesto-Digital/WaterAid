<header role="banner" {{ attributes.addClass(['site-header', 'js-site-header']).setAttribute('role', 'banner') }}>

  {{ include('wateraid:utility_navigation', {
    is_desktop: true,
    language_switcher: blocks.wateraid_languageswitcher,
    site_selector: blocks.wateraid_siteselector,
  }, false) }}

  <div class="site-header__main">
    <div class="site-header__colour-wrapper">

      <div class="site-header__container">

        <div class="site-header__logo">
          <a href="{{ url('<front>') }}" class="site-header__logo-link">
            <svg class="site-header__logo-image">
              <use href="{{ get_spritemap() }}#wateraid-logo" aria-label="Wateraid logo" />
            </svg>
          </a>
        </div>

        <div class="site-header__mobile-actions">
          {{ include('wateraid:button', {
            attributes: create_attribute().addClass([
                'site-header__open-close-mobile-menu-btn',
                'js-menu-open-close-btn'
              ]).setAttribute('aria-controls', 'mobile-nav'),
            text: 'Open / close menu',
            type: 'menu',
            icon: 'wa-utility-menu',
          }, false) }}
        </div>


        <a href="{{ url('<front>') }}" class="main-site-link">{{ "Main site"|t }}</a>
        {{ blocks.wateraid_wateraidsitemenu }}
      </div>
    </div>
  </div>
</header>
