{% set hero_classes = [
  'hero',
  'hero--'~colour,
  'hero--story',
  image ? 'hero--video' : 'hero--video',
] %}

<div {{ attributes.addClass(hero_classes) }}>
  {% if image %}
    <div class="hero__image {{ mobile_image|render ? "hero__image--desktop" }}">
      {{ include('wateraid:image', {
        image: image,
        caption: media_caption,
        credit: media_credit,
        width: 'full',
        caption_display: 'expandable'
      }) }}
    </div>
  {% endif %}

  {% if video %}
    <div class="hero__video">
      {{ video }}

      <div class="hero__video--play">
        {{ include('wateraid:button', {
          text: 'Play video',
          link: '',
          id: 'hero-play-button',
          type: 'icon',
          icon: 'wa-utility-play',
          theme: 'dark',
        }) }}
      </div>
      <div class="hero__video--pause">
        {{ include('wateraid:button', {
          text: 'Pause video',
          link: '',
          id: 'hero-pause-button',
          type: 'icon',
          icon: 'wa-utility-pause',
          theme: 'dark',
        }) }}
      </div>
    </div>
  {% endif %}

  <div class="hero__content">
      <h1 class="hero__content--title">{{ title }}</h1>
      {% if standfirst %}
        <div class="hero__content--standfirst">
          {{ standfirst }}
        </div>
      {% endif %}
      {% if time_to_read %}
        <div class="hero__content--time">
          {{ include('@wateraid/images/icons/wa-utility-schedule.svg') }}
          {{ time_to_read|replace({'minute': 'min'}) ~ ' read'|t }}
        </div>
      {% endif %}
  </div>
</div>
