{% set card_collection_classes = [
  'card-collection',
  'card-collection--' ~ columns,
  'card-collection--' ~ background
] %}

<div {{ attributes.addClass(card_collection_classes) }}>
  <div class="card-collection__wrapper">
    {% for card_item in card_items %}
      {{ card_item|raw }}
    {% endfor %}
  </div>
</div>
