<div class="parallax-scroll parallax-scroll--{{ variant|replace({'_':'-'}) }}" data-image-count={{ images|length }}>

  {% if variant == 'background' %}
    <div class="parallax-scroll__images parallax-scroll__background">
      {% for key, image in images %}
        <div class="parallax-scroll__image" data-image-no="{{ key + 1}}">
          {{ image }}
        </div>
      {% endfor %}
    </div>

    <div class="parallax-scroll__copy">
      {{ include('wateraid:rich_text', {
        text: copy
      }) }}
    </div>

  {% else %}
    <div class="parallax-scroll__container">
      <div class="parallax-scroll__images">
        {% for key, image in images %}
          <div class="parallax-scroll__image" data-image-no="{{ key + 1}}">
            {{ image }}
          </div>
        {% endfor %}
      </div>
      <div class="parallax-scroll__copy">
        {{ include('wateraid:rich_text', {
          text: copy
        }) }}
      </div>
    </div>
  {% endif %}

</div>
